  <body>

    <!-- Hero banner -->
    <header class="hero">
      <div class="row">
        <div class="twelve columns">
          <div class="intro_wrapper">
            <div class="intro">
              <h1>Lagom</h1>
              <h4>The reflections of Matt Olson &mdash; <%= link_to 'systems thinker', 'http://en.wikipedia.org/wiki/Systems_thinking', :target => '_blank' %>, 
                <%= link_to 'hacker', 'http://en.wikipedia.org/wiki/Hacker_(programmer_subculture)', :target => '_blank' %>, 
                <%= link_to 'social entrepreneur', 'http://en.wikipedia.org/wiki/Social_entrepreneurship', :target => '_blank' %> &mdash; toward a retooling of consumer culture.</h4>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Sticky nav -->
    <div class="row">
      <div class="contain-to-grid sticky">
        <nav class="top-bar">
          <ul>
            <li class="name"><h1><%= link_to image_tag('profile-small.png'), '/about.html', :title => 'More about Matt' %></h1></li>
            <li class="toggle-topbar"><a href="#"></a></li>
          </ul>
          <section>
            <ul class="left">
              <li><%= link_to 'Blog', '/' %></li>
              <li><%= link_to 'Manifesto', '/manifesto.html' %></li>
              <li><%= link_to 'Hacking', tag_path('hacking') %></li>
              <li><%= link_to 'Systems', tag_path('systems') %></li>
            </ul>
            <ul class="right">
              <li><%= link_to 'Contact', '/contact.html' %></li>
              <li><%= link_to 'Archive', '/blog/archive.html' %></li>
              <li><%= link_to 'RSS', '/blog/feed.xml' %></li>
            </ul>
        </section>
        </nav>
      </div>
    </div>

    <!-- Main page container -->
    <div class="row">
      <div class="twelve columns page">
        <%= yield %>
      </div>
    </div>

