---
pageable: true
per_page: 10
---
<div class="nine columns">
<% page_articles.each_with_index do |article, i| %>
  <article>
    <time datetime="<%= article.date.strftime('%Y-%m-%d') %>"><%= article.date.strftime('%b %e, %Y') %></time>
    <h2><%= link_to article.title, article %></h2>
    <p><%= article.summary %></p>
    <ul class="article_stats">

    </ul>
    <% if article.summary.length < article.body.length %>
      <%= link_to 'Read more &rarr;', article, :class => 'secondary button radius' %>
    <% end %>
  </article>
<% end %>
